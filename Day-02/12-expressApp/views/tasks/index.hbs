<style>
    .completed{
        color : red;
        text-decoration: line-through;
        font-style: italic;
        font-weight: bold;
    }
</style>
<h1>Tasks</h1>
<hr>
<ol>
    {{#each list}}
       <li>
        {{#if isCompleted}}
            <span class="completed">{{name}}</span>
        {{else}}
            <span>{{name}}</span>
        {{/if}}
        <a href="/tasks/toggle/{{id}}">X</a></li>
    {{/each}}
</ol>
